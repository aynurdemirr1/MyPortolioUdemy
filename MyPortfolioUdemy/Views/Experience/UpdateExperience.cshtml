@using MyPortfolioUdemy.DAL.Entities
@model Experience

@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Deneyimler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Deneyim Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post" asp-action="UpdateExperience">
                            <!-- ✅ Güncellenecek verinin ID'sini gizli input olarak taşıyoruz -->
                            <input type="hidden" asp-for="ExperienceId" />

                            <div class="form-group">
                                <label>Firma Bilgisi</label>
                                <input type="text" asp-for="Head" class="form-control" />
                                <span asp-validation-for="Head" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Çalışılan Pozisyon</label>
                                <input type="text" asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Tarih Aralığı</label>
                                <input type="text" asp-for="Date" class="form-control" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea rows="4" class="form-control" asp-for="Description"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <button class="btn btn-success">Deneyimi Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
